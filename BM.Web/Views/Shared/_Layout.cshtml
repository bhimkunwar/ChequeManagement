<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - Business Management</title>
    <link href="/Content/LeoGrid/leoGrid.default.css" rel="stylesheet" type="text/css" />
    <link href="/Content/busyIndicator/busyIndicator.css" rel="stylesheet" type="text/css" />
    <script src="/Scripts/LeoGrid.js" type="text/javascript"></script>
    <script src="/Scripts/BusyIndicator.js" type="text/javascript"></script>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/knockout")
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("scripts", required: false)
</head>
<body>

    <div class="container-narrow">
        <div class="masthead">

            <div id='cssmenu'>
                <ul>
                    <li class='has-sub'><a href='#'><span>Bank Management</span></a>
                        <ul>
                            <li>@Html.ActionLink("Bank", "List", "Bank")</li>
                            <li>@Html.ActionLink("Cheque", "List", "Cheque")</li>
                        </ul>
                    </li>
                    <li class='has-sub'><a href='#'><span>Firm</span></a>
                        <ul>                            
                            <li>@Html.ActionLink("Pirty", "List", "Pirty")</li>
                            <li>@Html.ActionLink("Firm", "List", "Firm")</li>
                        </ul>
                    </li>
                    <li class='has-sub'><a href='#'><span>Company</span></a>
                        <ul>
                            <li>@Html.ActionLink("Employee", "List", "Employee")</li>
                            <li>@Html.ActionLink("Email", "ManageBank")</li>
                        </ul>
                    </li>
                    <li class='last'><a href='#'><span>Contact</span></a></li>
                </ul>
            </div>
        </div>
        <div id="body" class="container">
            @RenderSection("featured", required: false)
            <section>
                @RenderBody()
            </section>
        </div>
        <hr />
        <div id="footer">
            <div class="container">
                <p class="muted credit">&copy; @DateTime.Now.Year - Design and devloped by Bhim Kunwar</p>
            </div>
        </div>
    </div>

</body>
</html>
